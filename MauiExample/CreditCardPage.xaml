<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiExample.CreditCardPage"
             Title="Credit Card">
	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="12">
			<Label Text="Enter your card details" FontSize="20" />

			<!-- Card brand / preview -->
			<Grid ColumnDefinitions="*,Auto" Padding="0,8,0,0">
				<Label x:Name="BrandLabel" Text="Card" FontSize="16" VerticalOptions="Center" />
				<Label x:Name="MaskedNumberLabel" Grid.Column="1" FontSize="14" Opacity="0.7" VerticalOptions="Center" />
			</Grid>

			<!-- Cardholder Name -->
			<VerticalStackLayout Spacing="4">
				<Label Text="Cardholder name" />
				<Entry x:Name="NameEntry"
				       Placeholder="Full name as on card"
				       TextChanged="OnNameTextChanged"
				       ReturnType="Next" />
				<Label x:Name="NameErrorLabel" TextColor="Red" IsVisible="False" FontSize="12" />
			</VerticalStackLayout>

			<!-- Card Number -->
			<VerticalStackLayout Spacing="4">
				<Label Text="Card number" />
				<Entry x:Name="NumberEntry"
				       Keyboard="Numeric"
				       Placeholder="1234 5678 9012 3456"
				       TextChanged="OnNumberTextChanged"
				       ReturnType="Next" />
				<Label x:Name="NumberErrorLabel" TextColor="Red" IsVisible="False" FontSize="12" />
			</VerticalStackLayout>

			<Grid ColumnDefinitions="*,*" ColumnSpacing="12">
				<!-- Expiry -->
				<VerticalStackLayout Spacing="4">
					<Label Text="Expiry (MM/YY)" />
					<Entry x:Name="ExpiryEntry"
					       Keyboard="Numeric"
					       Placeholder="MM/YY"
					       TextChanged="OnExpiryTextChanged"
					       ReturnType="Next" />
					<Label x:Name="ExpiryErrorLabel" TextColor="Red" IsVisible="False" FontSize="12" />
				</VerticalStackLayout>

				<!-- CVC -->
				<VerticalStackLayout Spacing="4" Grid.Column="1">
					<Label Text="CVC" />
					<Entry x:Name="CvcEntry"
					       Keyboard="Numeric"
					       Placeholder="123"
					       TextChanged="OnCvcTextChanged"
					       ReturnType="Done" />
					<Label x:Name="CvcErrorLabel" TextColor="Red" IsVisible="False" FontSize="12" />
				</VerticalStackLayout>
			</Grid>

			<Button Text="Save card"
			        Clicked="OnSaveClicked" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

